[Unit]
Description=Gunicorn server for DOMAIN

[Service]
Restart=on-failure
User=elpanda
WorkingDirectory=/home/elpanda/sites/DOMAIN
EnvironmentFile=/home/elpanda/sites/DOMAIN/.env

ExecStart=/home/elpanda/sites/DOMAIN/virtualenv/bin/gunicorn \
		--bind unix:/tmp/DOMAIN.socket \
		superlists.wsgi:application

[Install]
WantedBy=multi-user.target
